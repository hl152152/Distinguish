<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/credit_card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="银行卡"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/driving_card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="驾驶证"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/vehicle_card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="行驶证"
        tools:ignore="HardcodedText" />




    <Button
        android:id="@+id/id_card_front_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证正面(手动识别)"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/id_card_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证反面(手动识别)"
        tools:ignore="HardcodedText" />



    <Button
        android:id="@+id/id_card_front_button_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证正面(自动识别)"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/id_card_back_button_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身份证反面(自动识别)"
        tools:ignore="HardcodedText" />






    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

